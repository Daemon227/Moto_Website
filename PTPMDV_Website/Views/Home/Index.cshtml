
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#header-carousel" data-slide-to="1"></li>
                    <li data-target="#header-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item position-relative active" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="~/img/Banner/SuKien.png" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Sport Moto</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Mang lại trải nghiệm lái xe tốt nhất</p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="~/img/Banner/poster.png" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Kiểu Dáng Hiện Đại</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Với những thiết kế hiện đại, mang tầm vóc </p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="~/img/Banner/MotoEvent.png" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Đa Dạng Màu Sắc Thể Loại</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Bạn có thể tự do chọn phong cách của mình</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="~/img/Banner/banner-sh-2020.jpg" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Thiết Kế</h6>
                    <h3 class="text-white mb-3">Hiện Đại</h3>
                </div>
            </div>
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="~/img/Banner/poster.png" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Kiểu Dáng</h6>
                    <h3 class="text-white mb-3">Sang Trọng</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Categories Start -->
